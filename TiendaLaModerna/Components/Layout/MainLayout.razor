@inherits LayoutComponentBase

<div class="min-h-screen">
    <button @onclick="ToggleSidebar" class="p-2 m-2 text-gray-500 sm:hidden">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2"
             viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round"
                  d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
    </button>

    <div class="flex">
        
        <div class="@SidebarClasses">
            <NavMenu />
        </div>

        
        <main class="flex-1 p-6 h-screen overflow-y-auto overflow-x-hidden">
            @Body
        </main>
    </div>
</div>
<!-- Error UI -->
<div id="blazor-error-ui"
     data-nosnippet
     class="fixed bottom-4 right-4 bg-red-500 text-white px-4 py-3 rounded-lg shadow-lg z-50 hidden">
    <div class="flex items-center justify-between">
        <span class="text-sm font-medium">An unhandled error has occurred.</span>
        <div class="flex items-center space-x-2 ml-4">
            <a href="." class="text-white underline hover:no-underline text-sm">Reload</a>
            <button class="dismiss text-white hover:text-gray-200 text-lg leading-none">&times;</button>
        </div>
    </div>
</div>

@code {
    private bool isSidebarOpen = false;

    private void ToggleSidebar() => isSidebarOpen = !isSidebarOpen;

    private string SidebarClasses =>
        $"bg-white sm:relative sm:translate-x-0 transition-all duration-300 ease-in-out " +
        (isSidebarOpen ? "translate-x-0 fixed top-0 left-0 z-50 w-64 h-full" : "-translate-x-full sm:translate-x-0");
}