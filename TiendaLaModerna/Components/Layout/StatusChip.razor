@* StatusChip.razor *@
<span class="@GetChipClasses()">
    @GetStatusIcon()
    @GetStatusText()
</span>

@code {
    [Parameter] public string Status { get; set; } = string.Empty;
    [Parameter] public string Type { get; set; } = "pago"; // pago o entrega

    private string GetChipClasses()
    {
        var baseClasses = "inline-flex items-center gap-1.5 px-3 py-1.5 rounded-full text-xs font-medium";

        return Status.ToUpper() switch
        {
            "PENDIENTE" => $"{baseClasses} bg-orange-100 text-orange-800 dark:bg-orange-900/30 dark:text-orange-300",
            "COMPLETADA" or "COMPLETA" => $"{baseClasses} bg-green-100 text-green-800 dark:bg-green-900/30 dark:text-green-300",
            "PARCIAL" => $"{baseClasses} bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300",
            "CANCELADA" => $"{baseClasses} bg-red-100 text-red-800 dark:bg-red-900/30 dark:text-red-300",
            _ => $"{baseClasses} bg-gray-100 text-gray-800 dark:bg-gray-900/30 dark:text-gray-300"
        };
    }

    private string GetStatusText()
    {
        var status = Status.ToUpper();

        string prefix = Type.ToLower() switch
        {
            "entrega" => "Entrega",
            "pago" => "Pago",
            _ => ""
        };

        return status switch
        {
            "PENDIENTE" => $"{prefix} Pendiente",
            "COMPLETADA" or "COMPLETA" => $"{prefix} Completado",
            "PARCIAL" => $"{prefix} Parcial",
            "CANCELADA" => $"{prefix} Cancelado",
            _ => Status
        };
    }

    private MarkupString GetStatusIcon()
    {
        var iconSvg = Status.ToUpper() switch
        {
            "PENDIENTE" => @"<svg class=""w-3 h-3"" fill=""currentColor"" viewBox=""0 0 20 20"">
                <path fill-rule=""evenodd"" d=""M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z"" clip-rule=""evenodd""></path>
            </svg>",
            "COMPLETADA" or "COMPLETA" => @"<svg class=""w-3 h-3"" fill=""currentColor"" viewBox=""0 0 20 20"">
                <path fill-rule=""evenodd"" d=""M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"" clip-rule=""evenodd""></path>
            </svg>",
            "PARCIAL" => @"<svg class=""w-3 h-3"" fill=""currentColor"" viewBox=""0 0 20 20"">
                <path fill-rule=""evenodd"" d=""M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"" clip-rule=""evenodd""></path>
            </svg>",
            "CANCELADA" => @"<svg class=""w-3 h-3"" fill=""currentColor"" viewBox=""0 0 20 20"">
                <path fill-rule=""evenodd"" d=""M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z"" clip-rule=""evenodd""></path>
            </svg>",
            _ => @"<svg class=""w-3 h-3"" fill=""currentColor"" viewBox=""0 0 20 20"">
                <path fill-rule=""evenodd"" d=""M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-8-3a1 1 0 00-.867.5 1 1 0 11-1.731-1A3 3 0 0113 8a3.001 3.001 0 01-2 2.83V11a1 1 0 11-2 0v-1a1 1 0 011-1 1 1 0 100-2zm0 8a1 1 0 100-2 1 1 0 000 2z"" clip-rule=""evenodd""></path>
            </svg>"
        };

        return new MarkupString(iconSvg);
    }
}
